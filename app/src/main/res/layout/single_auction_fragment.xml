<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:src="@drawable/rhcp_patch"

                android:id="@+id/headerImg"
                android:cropToPadding="false"
                android:scaleType="centerCrop" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#7333"></FrameLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/headerTextView"
                android:textColor="#FFF"
                android:layout_gravity="bottom|left|right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="6.00 PLN"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/price" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:text="MUSIC_SHOP (2500)"
            android:layout_gravity="center_vertical"
            android:id="@+id/shop" />
        </LinearLayout>
        <TextView
            android:id="@+id/auctionText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:maxLines="1000"
            android:text=""/>
        </LinearLayout>
    </ScrollView>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/shoping_cart"
        fab:fab_colorNormal="#FF5900"
        ></com.melnykov.fab.FloatingActionButton>
</FrameLayout>